<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
   <appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>[%d{yy-MM-dd HH:mm:ss}] %X{myHeader} [%t] [%C] [%L] [%-5p] %m%n</pattern>
      </encoder>
   </appender>
   
   <appender name = "FILE" class = "ch.qos.logback.core.FileAppender">
      <File>/Users/anandabhaumik/binmonspring/binmon_rest/src/main/resources/log/mylog.log</File>
      <encoder>
         <pattern>[%d{yy-MM-dd HH:mm:ss}] %X{myHeader} [%t] [%C] [%L] [%-5p] %m%n</pattern>
      </encoder>
   </appender>
   
   <root level = "INFO">
      <appender-ref ref = "FILE"/>
      <appender-ref ref = "STDOUT"/> 
   </root>
</configuration>